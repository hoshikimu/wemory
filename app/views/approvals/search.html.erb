<div class="container form-container">
  <div class="col-xs-4 col-xs-offset-4 form-box">
    <h4 class="form-title">ユーザー検索</h4>
      <%= form_with(url: permission_path, method: :get) do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class:"form-control fa", placeholder: "\uf007 お名前" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, class:"form-control fa", placeholder: "\uf0e0 メールアドレス" %>
        </div>
        <div class="form-group">
          <%= f.submit "検索", class:"btn btn-default" %>
        </div>
      <% end %>
  </div>
</div>