<div class="form-container">
  <div class="form-box-s">
    <h4 class="form-title">カテゴリー編集</h4>
      <%= form_for(@category, url: category_path, method: :patch) do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新", class:"btn btn-default" %>
        </div>
      <% end %>
  </div>
</div>