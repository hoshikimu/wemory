<div class="form-container">
  <div class="form-box">
    <h4 class="form-title">選択中の写真</h4>
    <% if @exist_cart_image %>
      <div class="cart-images-container">
        <% @cart_images.each do |cart_image| %>
          <%= link_to post_image_path(cart_image.post_image) do %>
            <%= attachment_image_tag cart_image.post_image, :image %>
          <% end %>
        <% end %>
      </div>
      <div class="cart-delete-link">
        <i class="far fa-trash-alt"></i><%= link_to " カートを空にする", cart_images_destroy_all_path, method: :delete %>
      </div>
      <% if @cart_images.count >= 51 %>
        <br>
        <p class="error_explanation">注文可能枚数は最大50枚までとなります。</p>
        <p class="error_explanation">選択中の枚数：<%= @cart_images.count %>枚</p>
      <% else %>
        <div class="cart-btn-container">
          <%= link_to "注文情報入力画面に進む", new_order_path, class:"btn btn-default" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>