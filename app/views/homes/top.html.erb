<div class="skp-container">
  <div id="theTarget">
    <% @main_post_images.each do |main_post_image| %>
      <%= attachment_image_tag main_post_image, :image %>
    <% end %>
  </div>
</div>
<div class="categories-container">
  <% @categories.each do |category| %>
    <div class="category-bar">
      <%= category.name %>
    </div>
  <% end %>
</div>
<div class="image-boxes-container">
  <% @post_images.each do |post_image| %>
    <%= link_to post_image_path(post_image) do %>
      <div class="image-box">
        <%= attachment_image_tag post_image, :image %>
      </div>
    <% end %>
  <% end %>
</div>