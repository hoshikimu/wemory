<% if PostImage.exists?(user_id: current_user.id) %>
  <div class="blank-header">
  </div>
  <div class="categories-container">
    <% @categories.each do |category| %>
      <div class="category-bar">
        <%= link_to index_by_category_path(category) do %>
          <%= category.name %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="index-image-boxes-container">
    <% @post_images.each do |post_image| %>
        <div class="index-image-box">
          <%= link_to post_image_path(post_image) do %>
            <%= attachment_image_tag post_image, :image %>
          <% end %>
        </div>
    <% end %>
  </div>
<% else %>
  <div class="no-post-image-container">
    <p><i class="fas fa-camera-retro"></i> 写真を投稿してみましょう！</p>
  </div>
<% end %>
<div class="pager">
  <%= paginate @post_images %>
</div>
