<% if post_image.cart_added_by?(current_user) %>
  <span>
    <%= link_to post_image_cart_images_path(post_image), method: :delete, remote: true do %>
      <i class="fas fa-shopping-cart" aria-hidden="true" style="color: green;"></i>
    <% end %>
  </span>
<% else %>
  <span>
    <%= link_to post_image_cart_images_path(post_image), method: :post, remote: true do %>
      <i class="fas fa-shopping-cart" aria-hidden="true"></i>
    <% end %>
  </span>
<% end %>