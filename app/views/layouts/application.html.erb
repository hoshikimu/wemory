<!DOCTYPE html>
<html lang="ja">
<html>
  <head>
    <title>wemory</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <nav class="header-nav">
          <div class="nav-logo">
            <%= link_to "wemory", top_path %>
          </div>
          <div class="nav-user">
            <span><i class="fas fa-user"></i><%= current_user.name %>さん</span>
          </div>
          <div class="nav-items">
            <%= link_to "投稿一覧", post_images_path, class:"nav-item" %>
            <%= link_to "投稿", new_post_image_path, class:"nav-item" %>
            <span class="p-nav-item">メニュー
              <%= link_to "カテゴリー", new_category_path, class:"child-nav-item1" %>
              <%= link_to "配送先設定", new_shipping_path, class:"child-nav-item2" %>
              <%= link_to "承認", approvals_search_path, class:"child-nav-item3" %>
              <%= link_to "カート", cart_images_index_path, class:"child-nav-item4" %>
              <%= link_to "注文履歴", orders_path, class:"child-nav-item5" %>
            </span>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"nav-item" %>
          </div>
        </nav>
      <% else %>
        <nav class="header-nav">
          <div class="nav-logo">
            <%= link_to "wemory", about_path %>
          </div>
          <div class="nav-items">
            <%= link_to "お問い合わせ", contacts_contact_path, class:"nav-item" %>
            <%= link_to "会員登録", new_user_registration_path, class:"nav-item" %>
            <%= link_to "ログイン", new_user_session_path, class:"nav-item" %>
          </div>
        </nav>
      <% end %>
      <!-- レスポンシブメニュー -->
      <div class="rsp-menu">
        <i class="fas fa-bars"></i>
      </div>
      <div class="menu-whitedisplay">
        <div class="white-display-close-btn">
          <i class="fas fa-times"></i>
        </div>
        <div class="rsp-menu-items">
          <% if user_signed_in? %>
            <%= link_to "投稿一覧", post_images_path, class:"rsp-menu-item" %>
            <%= link_to "投稿", new_post_image_path, class:"rsp-menu-item" %>
            <%= link_to "カテゴリー", new_category_path, class:"rsp-menu-item" %>
            <%= link_to "配送先設定", new_shipping_path, class:"rsp-menu-item" %>
            <%= link_to "承認", approvals_search_path, class:"rsp-menu-item" %>
            <%= link_to "カート", cart_images_index_path, class:"rsp-menu-item" %>
            <%= link_to "注文履歴", orders_path, class:"rsp-menu-item" %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"rsp-menu-item" %>
          <% else %>
            <%= link_to "お問い合わせ", contacts_contact_path, class:"rsp-menu-item" %>
            <%= link_to "会員登録", new_user_registration_path, class:"rsp-menu-item" %>
            <%= link_to "ログイン", new_user_session_path, class:"rsp-menu-item" %>
          <% end %>
        </div>
      </div>
      <!-- レスポンシブメニュー -->
    </header>
    <main>
      <% if flash[:success] %>
        <div class="success-flash">
          <%= flash[:success] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert-flash">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <%= yield %>
      <span id="back">
        <a href="#">
          <i class="fas fa-arrow-up"></i>
        </a>
      </span>
    </main>
    <footer>
      <div class="fab fa-instagram-square sns-icon"></div>
      <div class="fab fa-twitter-square sns-icon"></div>
      <div class="fab fa-facebook-square sns-icon"></div>
      <div class="footer-nav-logo">wemory</div>
      <%= link_to "お問い合わせ", contacts_contact_path, class:"footer-contact" %>
    </footer>
  </body>
</html>
