<!DOCTYPE html>
<html lang="ja">
<html>
  <head>
    <title>Wemory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <nav class="header-nav">
          <div class="nav-logo">
            <%= link_to "wemory", top_path %>
          </div>
          <div class="nav-user">
            <span><i class="fas fa-user"></i><%= current_user.name %>さん</span>
          </div>
          <div class="nav-items">
            <%= link_to "投稿一覧", post_images_path, class:"nav-item" %>
            <%= link_to "投稿", new_post_image_path, class:"nav-item" %>
            <span class="p-nav-item">メニュー
              <%= link_to "カテゴリー", new_post_image_path, class:"child-nav-item1" %>
              <%= link_to "マイページ", new_post_image_path, class:"child-nav-item2" %>
              <%= link_to "カート", new_post_image_path, class:"child-nav-item3" %>
              <%= link_to "注文履歴", top_path, class:"child-nav-item4" %>
            </span>
            <%= link_to "ログアウト", new_post_image_path, class:"nav-item" %>
          </div>
        </nav>
      <% else %>
        <nav class="header-nav">
          <div class="nav-logo">
            <p>wemory</p>
          </div>
          <ul class="nav-item">
            <li>お問い合わせ</li>
            <li>会員登録</li>
            <li>ログイン</li>
          </ul>
        </nav>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
